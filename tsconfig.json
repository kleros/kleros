{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "utils/*": [
        "utils/*",
        "utils/"
      ],
      "type-chain/*": [
        "type-chain/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "hardhat.config.ts",
    "./src",
    "./scripts",
    "./test",
    "./typechain-types",
    "./deploy"
  ]
}
